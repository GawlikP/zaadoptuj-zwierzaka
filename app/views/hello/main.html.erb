<% provide(:title, 'Sign up') %>
<%= render 'header'%>
<div class="container-fluid" style="padding:0; margin:0;">




<div class="row">

<div class="col-3">
  <h1> HELLO <%= current_user.name %> </h1>
</div>

<div class="col-9">
  <% t = 0 %>
  <div class="card-group">
<% @dogs.each do |dog, i| %>



    <div class="card">
      <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= dog.name %></h5>
        <p class="card-text">Owner: <%= @users[t] %> | Gender: <% if dog.gender %> male <% else %> female <% end %> | Breed: <%= dog.breed %> </p>
        <p class="card-text"><small class="text-muted"><%= humanize (Time.now - dog.birth_date)%></small></p>
        <p><%= link_to 'SHOW', dog, class: "btn btn-success" %> </p>
      </div>
    </div>
    <% t+=1 %>
      <% if t == 3 %>
          </div><div class="card-group">
            <% t = 0 %>
      <% end %>

      <% end %>
      <% if t != 3 %>
        <% j = 3 - t %>
        <% (1..j).each  do |n| %>
          <div class="card"></div>
        <% end %>
      <% end %>
  </div>


</div>

<div class="col-3">
    <h1> HELLO WORLD </h1>
</div>

</div>

</div>


