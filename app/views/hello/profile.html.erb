<%= render 'header' %>
  <div class="container-fluid">
    <h1> <%= @user.name %> </h1><br>
    <div class="card">

      <div class="card-title">  <%= @user.name %>  </div>
      <div class="card-body">

        <% if @profile %>

        <p>
          <strong>Apartment:</strong>
          <%= @profile.apartment %>
        </p>

        <p>
          <strong>Garden:</strong>
          <%= @profile.garden %>
        </p>

        <p>
          <strong>Age:</strong>
          <%= @profile.age %>
        </p>

        <p>
          <strong>Animal experience:</strong>
          <%= @profile.animal_experience %>
        </p>

        <p>
          <strong>Time to spent:</strong>
          <%= @profile.time_to_spent %>
        </p>

        <strong>Finance:</strong>
        <p>
          <%= @profile.finance %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @profile.description %>
        </p>
        <% else %>
          <p> No profile created </p>
        <% end %>
      </div>

      <td><%= link_to 'Edit', edit_profile_path(@profile) %></td>

    </div>
</div>
