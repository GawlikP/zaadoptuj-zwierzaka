<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Apartment</th>
      <th>Garden</th>
      <th>Age</th>
      <th>Animal experience</th>
      <th>Time to spent</th>
      <th>Finance</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.apartment %></td>
        <td><%= profile.garden %></td>
        <td><%= profile.age %></td>
        <td><%= profile.animal_experience %></td>
        <td><%= profile.time_to_spent %></td>
        <td><%= profile.finance %></td>
        <td><%= profile.description %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

