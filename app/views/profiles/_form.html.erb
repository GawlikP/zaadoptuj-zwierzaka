<%= form_with(model: profile) do |form| %>
<div class="form-group">
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" hidden>
    <%= form.label :user_id %>
    <%= form.hidden_field :user_id %>
  </div>


  <div class="form-group">
    <%= form.label :apartment, 'Wielkość lokum',class: 'form-label' %>
    <%= form.select :apartment, options_for_select([['Jakikolwiek dach nad głową', '1'], ['Małe mieszkanie', '2'], ['Duże mieszkanie', '3'], ['Mieszkanie z ogrodem', '4'], ['Duża połać terenu', '5']]), {:apartment_size => form.object.apartment
    },{class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :garden, 'Ogród',class: 'form-label' %>
    <%= form.number_field :garden, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :age, 'Wiek',class: 'form-label' %>
    <%= form.number_field :age, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :animal_experience, 'Doświadczenie z psami',class: 'form-label' %>
    <%= form.select :animal_experience,  options_for_select([['Właściciel nie miewa kontaku z psami', '1'], ['Właściciel ma stałe kontakty z psami', '2'], ['W rodzinie kiedyś był pies', '3'], ['Posiadał psa w przeszłości', '4'], ['Właściciel ma/miał wiele
    psów i ma dobre z nimi doświadczenie', '5']]), {:owner_with_dogs => form.object.animal_experience}, {class: 'form-control'} %>

  </div>

  <div class="form-group">
    <%= form.label :time_to_spent, 'Wolny czas, jaki mogę spędzać z psem',class: 'form-label' %>
    <%= form.select :time_to_spent, options_for_select([['Pies potrafi przebywać samemu, nie potrzebuje stałego kontaktu', '1'], ['Pies potrafi zostać sam do 9-10 godzin', '2'], ['Pies powinien bez problemu radzić sobie samemu do 4-5 godzin', '3'],
    ['Pies źle znosi rozłąkę', '4'], ['Pies traumatycznie reaguje na pozostawienie go samemu', '5']]), {:time_to_spent => form.object.time_to_spent },{class: 'form-control'}%>

  </div>

  <div class="form-group">
    <%= form.label :finance, 'Finanse' ,class: 'form-label' %>
    <%= form.number_field :finance, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Opis',class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Zaktualizuj profil', class: 'btn btn-success'  %>
  </div>
  </div>
<% end %>
