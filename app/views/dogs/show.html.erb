      <tr>
        <td><i class="fa fa-paw"><strong> Szczepienia:</strong></td>
        <td><%= humanize_vaccination @dog.vaccination %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Wielkość:</strong></td>
        <td><%= humanize_size @dog.size %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Waga:</strong></td>
        <td><%= @dog.weight %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Wysokość:</strong></td>
        <td><%= @dog.height %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Potrzebna przestrzeń:</strong></td>
        <td><%= humanize_apartment_size @dog.apartment_size %></td>
      </tr>
