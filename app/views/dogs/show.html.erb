        <td><%= humanize_time_to_spent @dog.time_to_spent %></td>
      </tr>

            <tr>

              <td><i class="fa fa-paw"></i><strong> Wymagane doświadczenie właściciela:</strong></td>
              <td><%= humanize_owner_with_dogs @dog.owner_with_dogs %></td>
            </tr>
    </tbody>
  </table>
    </div>


    <div class="col-sm-3">
      <table class="table" style="color:#fff;background:#405d27">
    <thead>
      <tr>

      </tr>
    </thead>
    <tbody>

      <tr>
        <td><i class="fa fa-paw"><strong> Zachowanie wobec innych zwierząt:</strong></td>
        <td><%= humanize_animals @dog.animals %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Głośność:</strong></td>
        <td><%= humanize_noise @dog.noise %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Energiczność:</strong></td>
        <td><%= humanize_energy @dog.energy %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Usposobienie:</strong></td>
        <td><%= humanize_dispoition @dog.disposition %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Lokalizacja:</strong></td>
        <td><%= @dog.localization %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Sierść:</strong></td>
        <td><%= humanize_coat @dog.coat %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Ślinienie:</strong></td>
        <td><%= humanize_drooling @dog.drooling %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Wychowanie:</strong></td>
        <td><%= humanize_obedience @dog.obedience %></td>
      </tr>
      <tr>
        <td><i class="fa fa-paw"><strong> Właściciel:</strong></td>
        <td><%= @dog.user.name %></td>
      </tr>
    </tbody>
  </table>
  <% if current_user.id == @dog.user.id %>
    <%= link_to 'Edytuj profil puplia', edit_dog_path(@dog), class:'btn btn-dark btn-lg' %>
  <% end %>


    </div>
    <div class="row">

        <div class="card" style="margin: 25px 100px 25px 100px;">
      <h4 class="card-title"> Opis: </h4>
    <div class="card-body "><p> <%= @dog.description %></p></div>
  </div>
  </div>
</div>

<style>
strong{ font-family: 'Pattaya', sans-serif;
font-size: 20px;}
table{

    border-radius: 10px;
    -moz-border-radius: 5px;

}

</style>

<%= render 'adoption_form',  adoption_offert: @adoption_offert %>

<% @questions.each do |question, i| %>
<% if current_user.id == @dog.user.id || question.hiden == false %>
<div class="card">
  <h5 class="card-title">Pytanie od: <%= question.user.name %></h5>
  <div class="card-text"><p>Pytanie: <b><%= question.question %></b></p></div>
  <br>
  <div class="card-text"><p>Odpowiedź właściciela: <b> <%= question.answer %></b> </p>
  </div>
  <br>
</div>
<% if current_user.id == @dog.user.id %>

  <%= render 'hello/form_answer', question: question, id: question.id %>

<%end %>
<% end %>
<% end %>

<%= render 'question_form', question: @question, d_id: @dog.id, u_id: current_user.id %>

